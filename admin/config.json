{
  "backend": {
    "name": "github",
    "repo": "yanililas/landing-page",
    "branch": "main",
    "base_url": "https://api.netlify.com",
    "auth_endpoint": "auth"
  },
  "media_folder": "assets/articles",
  "public_folder": "/assets/articles",
  "collections": [
    {
      "name": "insights",
      "label": "Insights",
      "folder": "articles",
      "create": true,
      "slug": "{{year}}-{{month}}-{{day}}-{{slug}}",
      "fields": [
        {
          "label": "Title",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "Publish Date",
          "name": "date",
          "widget": "datetime"
        },
        {
          "label": "Category",
          "name": "category",
          "widget": "select",
          "options": ["thinkers", "publishers", "impact"]
        },
        {
          "label": "Featured Image",
          "name": "image",
          "widget": "image",
          "required": false
        },
        {
          "label": "Excerpt",
          "name": "excerpt",
          "widget": "text",
          "required": false
        },
        {
          "label": "Read Time (minutes)",
          "name": "readTime",
          "widget": "number",
          "default": 5,
          "value_type": "int"
        },
        {
          "label": "Body",
          "name": "body",
          "widget": "markdown"
        },
        {
          "label": "Author",
          "name": "author",
          "widget": "string",
          "required": false
        },
        {
          "label": "Tags",
          "name": "tags",
          "widget": "list",
          "required": false
        }
      ]
    }
  ]
}

